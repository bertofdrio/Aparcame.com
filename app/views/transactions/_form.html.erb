<%= form_for @transaction do |f| %>
    <%= render :partial => 'shared/error', :locals => { :item => @transaction } %>

    <div class="field">
      <%= f.label :amount %>:
      <%= f.text_field :amount %>
    </div>

    <div class="actions">
      <button type="submit" name="commit"><img src="https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif" align="left" style="margin-right:7px;"> </button>
    </div>

<% end %>